cat ~/.ssh/id_rsa.pub >> ~/.ssh/authorized_keys



chmod 0600 ~/.ssh/authorized_keys

ssh localhost


Go to apache official website  and download apache hadoop 3.3.1 version binary64 ----> backupsites copy link 
In terminal 
  
$wget  (paste link) https://downloads.apache.org/hadoop/common/hadoop-3.3.1/hadoop-3.3.1-aarch64.tar.gz
$ sudo nano .bashrc

export JAVA_HOME=/usr/lib/jvm/java-8-openjdk-amd64
export HADOOP_HOME=/home/hadoop-3.3.1
export HADOOP_INSTALL=$HADOOP_HOME
export HADOOP_MAPRED_HOME=$HADOOP_HOME
export HADOOP_COMMON_HOME=$HADOOP_HOME
export HADOOP_HDFS_HOME=$HADOOP_HOME
